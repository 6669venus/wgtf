# Use FIND_PACKAGE( Python ) to run this script.
SET( BW_NO_UNICODE ON )
INCLUDE( WGToolsProject )
SET( BW_NO_UNICODE OFF )

IF( NOT Python_FIND_VERSION )
    SET( Python_FIND_VERSION "2.7.10" )
ENDIF()

SET( PYTHON_CMAKE_DIR ${WG_TOOLS_THIRD_PARTY_DIR}/python )
SET( PYTHON_DIR ${PYTHON_CMAKE_DIR}/Python-${Python_FIND_VERSION} )
SET( PYTHON_LIB_DIR ${PYTHON_DIR}/Lib )

IF( EXISTS "${PYTHON_DIR}" )
	MESSAGE( STATUS "Enabled ${PROJECT_NAME}. Python found in ${PYTHON_DIR}." )
	SET( PYTHON_FOUND TRUE )

	SET( PYTHON_INCLUDE_DIRS ${PYTHON_DIR}/Include )
	IF( WIN32 )
		LIST( APPEND PYTHON_INCLUDE_DIRS ${PYTHON_DIR}/PC )
	ENDIF()
ELSE()
	MESSAGE( STATUS "Disabled ${PROJECT_NAME}. Python not found in ${PYTHON_DIR}." )
	SET( PYTHON_FOUND FALSE )
ENDIF()

