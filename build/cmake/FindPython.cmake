# Use FIND_PACKAGE( Python ) to run this script.
INCLUDE( WGToolsProject )

IF( NOT PYTHON_VERSION )
    SET( PYTHON_VERSION "2.7.8" )
ENDIF()

SET( PYTHON_CMAKE_DIR ${WG_TOOLS_THIRD_PARTY_DIR}/python )
SET( PYTHON_DIR ${PYTHON_CMAKE_DIR}/Python-${PYTHON_VERSION} )

IF( EXISTS "${PYTHON_DIR}" )
	SET( PYTHON_FOUND TRUE )
	MESSAGE( STATUS "Found Python: ${PYTHON_DIR}" )
ELSE()
	SET( PYTHON_FOUND FALSE )
	MESSAGE( STATUS "Could NOT find Python in ${PYTHON_DIR}" )
ENDIF()

